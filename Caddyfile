# Caddy configuration for TTS Application
# Reverse proxy for frontend and API services

{
	# Global options
	auto_https off
	admin off
}

# HTTP server - accept all domains
:80 {
	# API routes
	@api {
		path /api/*
	}
	
	handle @api {
		reverse_proxy go-service:8080
	}

	# Health check
	@health {
		path /health
	}
	
	handle @health {
		reverse_proxy go-service:8080
	}

	# Catch-all for frontend
	handle {
		reverse_proxy frontend:3000
	}
}
